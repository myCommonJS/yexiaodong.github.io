/*公共*/
body,ul{
    margin:0;
    padding:0;
    line-height:1.7;
}
.header-bar{
	width:100%;
	height:31px;
	line-height: 31px;
	background: #F1F1F1;
	border-bottom:3px solid #DE0007; 
}
.header-bar ul{
	display: block;
	width:1200px;
	height:31px;
	margin:0 auto;
}
ul li{
    list-style-type:none;
}

.left{
	float:left;
}
.right{
	float:right;
}
.header-body{
	width:1200px;
	height:106px;
	margin:0 auto;
	clear: both;//清楚浮动
}
.header-logo{
	display: block;
	width:268px;
	height:106px;
	float:left;
	background:url(img/logo_combo.gif) left center no-repeat;
}